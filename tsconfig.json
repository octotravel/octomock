{
  "compilerOptions": {
    "outDir": "dist",
    "target": "es2017",
    "module": "commonjs",
    "sourceMap": true,
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "esModuleInterop": true,
    "typeRoots": ["node_modules/@types"],
    "types": ["jest"],
    "resolveJsonModule": true
  },
  "include": ["src/**/**.ts", "test/**/**.ts"],
  "exclude": ["node_modules"]
}
